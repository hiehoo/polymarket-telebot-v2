{
  "name": "polymarket-telebot",
  "version": "1.0.0",
  "description": "Telegram bot for tracking Polymarket wallet activity in real-time",
  "main": "dist/index.minimal.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.minimal.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "pre-commit": "npm run typecheck && npm run lint && npm run test",
    "init-db": "ts-node scripts/init-db.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "polymarket",
    "crypto",
    "prediction",
    "market",
    "wallet",
    "tracking",
    "real-time"
  ],
  "author": "PolyBot Development Team",
  "license": "MIT",
  "dependencies": {
    "@polymarket/real-time-data-client": "^1.0.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.13.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "ioredis": "^5.8.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "telegraf": "^4.16.3",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
