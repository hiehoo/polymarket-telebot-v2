# Development Dockerfile - bypasses TypeScript compilation issues
FROM node:18-alpine

# Install dumb-init for proper signal handling
RUN apk add --no-cache dumb-init

# Create app user for security
RUN addgroup -g 1001 -S nodejs && adduser -S telebot -u 1001 -G nodejs

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code and configuration
COPY src/ ./src/
COPY tsconfig.json ./
COPY scripts/ ./scripts/

# Create logs directory
RUN mkdir -p logs && chown telebot:nodejs logs

# Switch to non-root user
USER telebot

# Expose port
EXPOSE 3000

# Health check (simplified for development)
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD ps aux | grep '[n]ode.*ts-node.*dev' || exit 1

# Use dumb-init to handle signals properly and run with ts-node for development
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev"]